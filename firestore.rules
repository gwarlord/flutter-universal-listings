rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function isAdmin() {
      return isSignedIn() && 
             exists(/databases/$(database)/documents/admins/admins) &&
             request.auth.uid in get(/databases/$(database)/documents/admins/admins).data.adminUserIds;
    }
    
    function hasSubscription(tier) {
      return isSignedIn() && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.subscriptionTier == tier;
    }
    
    function isProfessionalOrHigher() {
      return isSignedIn() && 
             (hasSubscription('professional') || 
              hasSubscription('premium') || 
              isAdmin());
    }
    
    // Admin collection
    match /admins/{document} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }
    
    // Users collection
    match /users/{userId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn() && request.auth.uid == userId;
      allow update: if isOwner(userId) || isAdmin();
      allow delete: if isAdmin();
      
      // User's bookings subcollection
      match /myBookings/{bookingId} {
        allow read: if isOwner(userId) || isAdmin();
        allow create: if isSignedIn() && request.auth.uid == request.resource.data.customerId;
        allow update, delete: if isOwner(userId) || isAdmin();
      }
      
      // Received bookings subcollection (for listers)
      match /receivedBookings/{bookingId} {
        allow read: if isOwner(userId) || isAdmin();
        allow create: if isSignedIn();
        allow update: if isOwner(userId) || isAdmin();
        allow delete: if isOwner(userId) || isAdmin();
      }
    }
    
    // Listings collection
    match /listings/{listingId} {
      allow read: if true; // Public listings
      allow create: if isSignedIn() && 
                       request.auth.uid == request.resource.data.authorID;
      allow update: if isSignedIn() && 
                       (request.auth.uid == resource.data.authorID || isAdmin());
      allow delete: if isSignedIn() && 
                       (request.auth.uid == resource.data.authorID || isAdmin());
      
      // Bookings subcollection for a listing
      match /bookings/{bookingId} {
        allow read: if isSignedIn() && 
                       (request.auth.uid == resource.data.customerId ||
                        request.auth.uid == get(/databases/$(database)/documents/listings/$(listingId)).data.authorID ||
                        isAdmin());
        allow create: if isSignedIn() && 
                         request.auth.uid == request.resource.data.customerId;
        allow update: if isSignedIn() && 
                         (request.auth.uid == get(/databases/$(database)/documents/listings/$(listingId)).data.authorID ||
                          isAdmin());
        allow delete: if isSignedIn() && 
                         (request.auth.uid == resource.data.customerId ||
                          request.auth.uid == get(/databases/$(database)/documents/listings/$(listingId)).data.authorID ||
                          isAdmin());
      }
    }
    
    // Categories collection
    match /categories/{categoryId} {
      allow read: if true; // Public categories
      allow write: if isAdmin();
    }
    
    // Filters collection
    match /filters/{filterId} {
      allow read: if true; // Public filters
      allow write: if isAdmin();
    }
    
    // Reviews collection
    match /reviews/{reviewId} {
      allow read: if true; // Public reviews
      allow create: if isSignedIn() && 
                       request.auth.uid == request.resource.data.authorID;
      allow update, delete: if isSignedIn() && 
                               (request.auth.uid == resource.data.authorID || isAdmin());
    }
    
    // Chat channels collection
    match /channels/{channelId} {
      allow read: if isSignedIn() && 
                     request.auth.uid in resource.data.participants;
      allow create: if isSignedIn() && 
                       request.auth.uid in request.resource.data.participants;
      allow update: if isSignedIn() && 
                       request.auth.uid in resource.data.participants;
      allow delete: if isAdmin();
      
      // Messages subcollection
      match /thread/{messageId} {
        allow read: if isSignedIn() && 
                       request.auth.uid in get(/databases/$(database)/documents/channels/$(channelId)).data.participants;
        allow create: if isSignedIn() && 
                         request.auth.uid in get(/databases/$(database)/documents/channels/$(channelId)).data.participants &&
                         request.auth.uid == request.resource.data.senderID;
        allow update, delete: if isSignedIn() && 
                                 request.auth.uid == resource.data.senderID;
      }
    }
    
    // Mail collection (for email triggers)
    match /mail/{mailId} {
      allow read: if isAdmin();
      allow create: if isSignedIn(); // Allow app to create email requests
      allow update, delete: if isAdmin();
    }
    
    // Stripe customers (if using Stripe)
    match /stripe_customers/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      allow write: if false; // Managed by backend only
      
      match /checkout_sessions/{sessionId} {
        allow read, write: if isOwner(userId);
      }
      
      match /subscriptions/{subscriptionId} {
        allow read: if isOwner(userId);
        allow write: if false; // Managed by backend only
      }
    }
  }
}
